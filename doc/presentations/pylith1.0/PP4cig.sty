\gdef\@fontTitle{%
  \LARGE\bfseries\color{\colTitle}}
\gdef\@fontSubtitle{%
  \large\color{\colSubtitle}}

\renewcommand{\slidetitle}[1]{\color{\colTitle}%
  \reset@font\large\centering\bfseries#1\par%
  \par\vspace*{12pt}}

\def\@maketitle{\newpage
  \zerolistvertdimens
  \if@compatibility\else
    \advance\abovetitleskip -\baselineskip
  \fi
  \null\vskip\abovetitleskip
  \pdfbookmark{\@title}{\thepage}
  \begin{center}
    \normalfont
    {\@fontTitle\@title\par}
    \expandafter\ifx\csname @subtitle\endcsname\relax %
    \else
    \vskip1.5in
    {\@fontSubtitle\@subtitle\par}
    \fi
    \vskip\titleauthorskip
    {\large \@author}
    \expandafter\ifx\csname @institution\endcsname\relax %
    \else
    \vskip.8em
    \@institution
    \fi
    \vskip\authordateskip {\@date}
    \par\vfill
    \end{center}
}



