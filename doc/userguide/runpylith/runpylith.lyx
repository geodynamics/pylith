time_step = pylith.problems.TimeStepAdapt ; Change the time step algorithm
\end_layout

\begin_layout LyX-Code

\end_layout

\begin_layout LyX-Code
[pylithapp.problem.formulation.time_step]
\end_layout

\begin_layout LyX-Code
