\end_layout

\begin_layout LyX-Code
max_dt = 10.0*year
\end_layout

\begin_layout LyX-Code
adapt_skip = 10 ; Default value
\end_layout

\begin_layout LyX-Code
stability_factor = 2.0 ; Default value
\end_layout

