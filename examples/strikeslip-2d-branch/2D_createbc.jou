### set boundary conditions ###

#Set surfaces 
block 1 surface surface_xneg
block 1 name "elastic_xneg"

block 2 surface surface_xpos
block 2 name "elastic_xpos"

block 3 surface surface_branch_wedge
block 3 name "elastic_wedge"

###### make groups for the fault nodes ######

# main
group "main_fault" add node in curve main_fault_ypos
group "main_fault" add node in curve main_fault_yneg
nodeset 10 group main_fault 
nodeset 10 name "main_fault"

# branch
group "branch" add node in curve branch_fault
nodeset 20 group branch 
nodeset 20 name "branch"

# branch
group "buried_edge" add node 1
nodeset 30 group buried_edge
nodeset 30 name "branch_edge"

### create sets for sides ###

#x positive 
group "boundary_xpos" add node in curve c_xpos
nodeset 21 group boundary_xpos
nodeset 21 name "boundary_xpos"

#x negative
group "boundary_xneg" add node in curve c_xneg
nodeset 22 group boundary_xneg
nodeset 22 name "boundary_xneg"

#y positive
group "boundary_ypos" add node in curve c_ypos_xpos
group "boundary_ypos" add node in curve c_ypos_xneg
nodeset 23 group boundary_ypos
nodeset 23 name "boundary_ypos"

#y negative
