### set boundary conditions ###

#Set surfaces 
block 1 surface surface_xneg
block 1 name "elastic_xneg"

block 2 surface surface_xpos
block 2 name "elastic_xpos"

block 3 surface surface_ypos
block 3 name "elastic_ypos"

block 4 surface surface_yneg
block 4 name "elastic_yneg"

###### make groups for the fault nodes ######
## and assign the nodesets to a label ##
## main fault ##
group "main_fault" add node in curve main_fault_ypos
group "main_fault" add node in curve main_fault_yneg
nodeset 10 group main_fault 
nodeset 10 name "main_fault"

## branch 1 (longer segment) ##
group "branch1" add node in curve branch_fault1
nodeset 20 group branch1
nodeset 20 name "branch1"

## branch 2 (short segment) ##
group "branch2" add node in curve branch_fault2
nodeset 40 group branch2
nodeset 40 name "branch2"

## buried nodes ##

## buried for main ##
group "buried_main" add node 9 
group "buried_main" add node 5
nodeset 80 group buried_main
nodeset 80 name "buried_main"

## buried for branch1 ##
group "buried_branch1" add node 1
group "buried_branch1" add node 2
nodeset 81 group buried_branch1
nodeset 81 name "buried_branch1"

## buried for branch2 ##
group "buried_branch2" add node 7
group "buried_branch2" add node 1
nodeset 82 group buried_branch2
nodeset 82 name "buried_branch2"


