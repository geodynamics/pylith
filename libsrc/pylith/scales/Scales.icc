    return _temperature;
}


// Make value dimensionless.
inline
double
pylith::scales::Scales::nondimensionalize(const double value,
                                              const double scale) const {
    return value / scale;
}


// Make values dimensionless.
inline
void
pylith::scales::Scales::nondimensionalize(double* const values,
                                              const size_t nvalues,
                                              const double scale) const {
    assert( (0 < nvalues && values) ||
            (0 == nvalues && !values) );

    for (size_t i = 0; i < nvalues; ++i) {
        values[i] /= scale;
    }
} // nondimensionalize


// Make values dimensionless.
inline
void
pylith::scales::Scales::nondimensionalize(float* const values,
                                              const size_t nvalues,
                                              const double scale) const {
