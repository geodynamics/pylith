    }
} // nondimensionalize


// Make value dimensionless.
inline
double
pylith::scales::Scales::dimensionalize(const double value,
                                           const double scale) const {
    return value * scale;
}


// Make value dimensionless.
inline
void
pylith::scales::Scales::dimensionalize(double* const values,
