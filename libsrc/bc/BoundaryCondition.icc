// Set name of boundary condition surface.
inline
void
pylith::bc::BoundaryCondition::label(const char* value) {
  _label = value;
}

// Get label of boundary condition surface.
inline
const char*
pylith::bc::BoundaryCondition::label(void) const {
  return _label.c_str();
}


