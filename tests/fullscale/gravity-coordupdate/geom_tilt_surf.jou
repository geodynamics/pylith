# ----------------------------------------------------------------------
# Set units to SI.
# ----------------------------------------------------------------------
${Units('si')}

# ----------------------------------------------------------------------
# Define dimensions for problem.
# ----------------------------------------------------------------------

# Block is 10 km x 10 km.
# -10 km <= y <= 0 km.
reset
${xMin=-5.0*km}
${xMax=5.0*km}
${yMin=-10.0*km}
${yMax=0.0*km}
${dy=0.05*km}

# ----------------------------------------------------------------------
# Create vertices to define box.
# ----------------------------------------------------------------------
create vertex {xMin} {yMin} 0.0
create vertex {xMax} {yMin} 0.0
create vertex {xMax} {yMax-dy} 0.0
create vertex {xMin} {yMax+dy} 0.0

# ----------------------------------------------------------------------
# Create curves from vertices.
# ----------------------------------------------------------------------
create curve vertex 1 vertex 2
create curve vertex 2 vertex 3
create curve vertex 3 vertex 4
create curve vertex 4 vertex 1

# ----------------------------------------------------------------------
# Create box from curves.
# ----------------------------------------------------------------------
create surface curve 1 2 3 4
