# docker build --build-arg BASE_IMAGE=${VARIABLE_NAME} -f DOCKERFILE . -t IMAGE_NAME .

ARG BASE_IMAGE
FROM ${BASE_IMAGE} as base

LABEL maintainer="Brad Aagaard <baagaard@usgs.gov>"

USER ${TEST_USER}


ENV src_dir=${TOPSRC_DIR}/pylith

COPY --chown=pylith-tester:pylith-tester . ${src_dir}
WORKDIR ${src_dir}/docs-sphinx
RUN python3 -m pip install sphinx==4.2.0 myst-parser pydata-sphinx-theme sphinxcontrib.bibtex
RUN ./build.sh

CMD /bin/bash
